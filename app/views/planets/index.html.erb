<h2 class="center">Planets</h2>
<hr />
<div class="row">
  <div class="col s12 m6">
    <ul>
      <% @planets.each do |planet| %>
        <li
          class="planet-item"
          data-id=<%= planet.id %>
          data-name=<%= planet.name %>
          >
          <%= planet.name %> - (pronounced in Wookie) - <%= planet.description %>
        </li>
      <% end %>
    </ul>
  </div>
<div class="row" id="character-list">
  <h3 id="planet">Characters that live on the Planet</h3>
  <ul id="characters">
  </ul>
</div>
</div>
